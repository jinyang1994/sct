{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
